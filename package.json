{
  "type": "module",
  "name": "nearbybazaar-monorepo",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r run build",
    "dev": "concurrently -n api,web,vendor,admin -c blue,green,magenta,cyan \"pnpm --filter @nearbybazaar/api dev --port=4000\" \"pnpm --filter @nearbybazaar/web dev --port=3000\" \"pnpm --filter @nearbybazaar/vendor dev --port=3001\" \"pnpm --filter @nearbybazaar/admin dev --port=3002\"",
    "clean": "rimraf ./apps/*/dist ./packages/*/dist",
    "lint": "eslint .",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --coverage --runInBand",
    "pretest:e2e": "node scripts/check-servers.js",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "prepare": "husky",
    "generate:sdk": "openapi --input ./apps/api/src/routes/swagger.json --output ./packages/sdk --client fetch"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.38.0",
    "@playwright/test": "^1.56.1",
    "@types/bcryptjs": "^3.0.0",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/express-rate-limit": "^6.0.2",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mongoose": "^5.11.97",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.8.1",
    "@types/node-cache": "^4.2.5",
    "@types/nodemailer": "^7.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "concurrently": "^8.2.2",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "ioredis-mock": "^8.13.0",
    "jest": "^30.2.0",
    "jest-canvas-mock": "^2.5.2",
    "jest-environment-jsdom": "^30.2.0",
    "jest-junit": "^16.0.0",
    "lint-staged": "^16.2.4",
    "mongodb-memory-server": "^10.2.3",
    "netlify-cli": "^23.9.3",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.10",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2"
  },
  "dependencies": {
    "@bull-board/api": "^6.13.1",
    "@bull-board/express": "^6.13.1",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.65.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.206.0",
    "@opentelemetry/resources": "^2.1.0",
    "@opentelemetry/sdk-node": "^0.206.0",
    "@opentelemetry/semantic-conventions": "^1.37.0",
    "@types/pica": "^9.0.5",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/sanitize-html": "^2.16.0",
    "argon2": "^0.44.0",
    "bcryptjs": "^3.0.2",
    "bullmq": "^5.61.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "meilisearch": "^0.40.0",
    "mongoose": "^8.19.1",
    "openapi-typescript-codegen": "^0.29.0",
    "pica": "^9.0.1",
    "pino": "^10.1.0",
    "pino-http": "^11.0.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-qr-code": "^2.0.18",
    "sanitize-html": "^2.17.0",
    "sharp": "^0.34.4",
    "speakeasy": "^2.0.0",
    "web-vitals": "^5.1.0",
    "xss": "^1.0.15"
  }
}
